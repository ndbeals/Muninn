{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Both",
            "configurations": ["Client: Attach","Server: Attach"],
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Server: Attach",
            "restart": true,
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server: Launch",
            "cwd": "${workspaceFolder}/server",
            // "runtimeExecutable": "${workspaceFolder}/Server/node_modules/.bin/nodemon",
            // "runtimeArgs": ["--inspect", "--exec","babel-node"],
            // "runtimeExecutable": "yarn",
            // "runtimeArgs": ["dev"],
            // "port": 9229,
            // "timeout": 25000,
            "runtimeExecutable": "${workspaceFolder}/server/node_modules/.bin/nodemon",
            "runtimeArgs": [ "-r", "esm" ],
            "program": "${workspaceFolder}/server/index.js",
            "restart": true,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Client: Attach",
            "port": 9222,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client",
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceRoot}/client/*"
            },
            "skipFiles": [
                "_nuxt/**"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "name": "Client: Launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client",
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceRoot}/client/*"
            },
            // "breakOnLoad": true,
            // "sourceMaps": true,
            // "sourceMapPathOverrides": {
            //     "webpack:///*": "*",
            //     "webpack:///./*": "${webRoot}/*",
            //     "webpack:///src/*": "${webRoot}/*",
            //     "webpack:///./src/*": "${webRoot}/*",
            //     "webpack:///./src/views/*": "${webRoot}/views/*",
            //     "webpack:///./node_modules/*": "${workspaceFolder}/node_modules/*",
            //     "webpack:///./~/*": "${webRoot}/node_modules/*",
            // },
            // "env": {
            //     "NO_Server": "1"
            // },
            // "preLaunchTask": "webpack-dev-start",
            // "postDebugTask": "webpack-dev-stop",
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Server: launch this file",
            "cwd": "${workspaceFolder}/server",
            "program": "${file}",
            // "runtimeExecutable": "node -r esm ",
            // "runtimeExecutable": "${workspaceFolder}/Server/node_modules/.bin/babel-node",
            "runtimeArgs": ["-r", "esm"],
            "restart": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}